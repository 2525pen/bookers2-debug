<h2>User info</h2>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<h3><%= @user.errors.count %>error occurrence</h3>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->

<%= form_for(@user) do |f| %>
	<div class = "form-group">
		<div class="field">
			<label for="user_name">Name</label>
			<%= f.text_field :name, class: "name" %>
		</div>

		<div class="field">
			<label for="user_name">Image</label>
			<%= f.attachment_field :profile_image, class: "user_image" %>
		</div>

		<div class="field">
			<label for="user_name">Introduction</label>
			<%= f.text_area :introduction, class: "introduction" %>
		</div>

		<div class="field">
			<%= f.submit "Update User" %>
		</div>
	</div>
<% end %>