<h2>User info</h2>
	<table class="table">
		    <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '40x40' %></tr>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
			<tr>
		    <% if current_user != user %>
        		    <% if user.followed_by?(current_user) %>
        		    <th><%=link_to "フォロー済み", user_relation_ships_path(user.id), method: :delete %></th>
        		<% else %>
            		<th><%=link_to "フォローする", user_relation_ships_path(user.id), method: :post %></th>
        		<% end %>
    		<% else %>
    		</tr>
    		<tr>
				<th><%= link_to 'edit',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %></th>
			</tr>
			<tr>
    			<th><span>フォロー数:</span><%= link_to user.followers.count, follows_user_path(current_user.id) %></th>
    		</tr>
    		<tr>
    			<th><span>フォロワー数:</span><%= link_to user.followings.count, followers_user_path(current_user.id) %></th>
    		</tr>
   			<% end %>
		</div>
	</table>
